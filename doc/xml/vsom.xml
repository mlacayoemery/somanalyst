  <tool name="vsom" displayname="2. Train SOM" toolboxalias="">
    <arcToolboxHelpPath>C:\Program Files\ArcGIS\help\gp</arcToolboxHelpPath>
    <parameters>
      <param name="initial_SOM" displayname="initial SOM" type="Required" direction="Input" expression="&lt;initial_SOM&gt;">
        <commandReference/>
        <dialogReference>
          <para>The initial SOM to train.</para>
        </dialogReference>
      </param>
      <param name="training_data" displayname="training data" type="Required" direction="Input" expression="&lt;training_data&gt;">
        <commandReference/>
        <dialogReference>
          <para>The data with which to train the SOM.</para>
        </dialogReference>
      </param>
      <param name="length_of_training" displayname="length of training" type="Required" direction="Input" expression="&lt;length_of_training&gt;">
        <commandReference/>
        <dialogReference>
          <para>The length of training as measured by the total number of individual data row exposures.</para>
        </dialogReference>
      </param>
      <param name="initial_learning_rate" displayname="initial learning rate" type="Required" direction="Input" expression="&lt;initial_learning_rate&gt;">
        <commandReference/>
        <dialogReference>
          <para>The initial learing rate for the SOM.</para>
        </dialogReference>
      </param>
      <param name="initial_neighborhood_radius" displayname="initial neighborhood radius" type="Required" direction="Input" expression="&lt;initial_neighborhood_radius&gt;">
        <commandReference/>
        <dialogReference>
          <para>The initial distance over which a neighborhood is defined.</para>
        </dialogReference>
      </param>
      <param name="trained_SOM" displayname="trained SOM" type="Required" direction="Output" expression="&lt;trained_SOM&gt;">
        <commandReference/>
        <dialogReference>
          <para>The ouput trained SOM.</para>
        </dialogReference>
      </param>
      <param name="distance_metric" displayname="distance metric" type="Optional" direction="Input" expression="{Euclidean | Cosine}">
        <commandReference/>
        <dialogReference>
          <para>The distance metric to use when training the SOM. The Euclidean distance metric uses SOM_PAK as released from the Helsinki University of Technology. The Cosine distance metric uses SOM_PAK as modified by Fareed Qaddoura.</para>
        </dialogReference>
      </param>
      <param name="random_generator_seed" displayname="random generator seed" type="Optional" direction="Input" expression="{random_generator_seed}">
        <commandReference/>
        <dialogReference>
          <para>The seed for the random number generator, by default the current time is used.</para>
        </dialogReference>
      </param>
      <param name="fixed_points" displayname="fixed points" type="Optional" direction="Input" expression="{fixed_points}">
        <commandReference/>
        <dialogReference>
          <para>Use fixed point qualifiers in the training.</para>
        </dialogReference>
      </param>
      <param name="use_weights" displayname="use weights" type="Optional" direction="Input" expression="{use_weights}">
        <commandReference/>
        <dialogReference>
          <para>Use weighting qualifiers in the training.</para>
        </dialogReference>
      </param>
      <param name="read_buffer" displayname="read buffer" type="Optional" direction="Input" expression="{read_buffer}">
        <commandReference/>
        <dialogReference>
          <para>The number of lines to read at a time.</para>
        </dialogReference>
      </param>
      <param name="alpha_type" displayname="alpha type" type="Optional" direction="Input" expression="{linear | inverse_t}">
        <commandReference/>
        <dialogReference>
          <para>The learning rate function type. Linear (linear) is defined as initial alpha * [1 - (current training step/run length)]. Inverse-time (inverse_t) is defined as initial alpha * [(run length/100)/((run length/100)+current training step)].</para>
        </dialogReference>
      </param>
      <param name="snapshot_file" displayname="snapshot file" type="Optional" direction="Output" expression="{snapshot_file}">
        <commandReference/>
        <dialogReference>
          <para>A series of files to contain the intermediate SOMs. If the name contains %d the current step number will used in the file name.</para>
        </dialogReference>
      </param>
      <param name="shapshot_interval" displayname="shapshot interval" type="Optional" direction="Input" expression="{shapshot_interval}">
        <commandReference/>
        <dialogReference>
          <para>The interval at which to take the snapshots.</para>
        </dialogReference>
      </param>
    </parameters>
    <commandExample/>
  </tool>
