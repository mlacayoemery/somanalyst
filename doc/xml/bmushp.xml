<metadata xml:lang="en">
  <tool name="bmushp" displayname="2. Projected Data to Shapefile" toolboxalias="">
    <toolIllust src="" alt="No internet connection. Run localimages.py to view images." vsrc="http://somanalyst.googlecode.com/svn/trunk/doc/sphinx/_images/toolbox/bmu.png"/>
    <parameters>
      <param name="projected_data" displayname="projected data" type="Required" direction="Input" expression="&lt;projected_data&gt;">
        <commandReference/>
        <dialogReference>
          <para>The input projected data file.</para>
        </dialogReference>
      </param>
      <param name="shape_type" displayname="shape type" type="Required" direction="Input" expression="&lt;point&gt;">
        <commandReference/>
        <dialogReference>
          <para>The type of shapes to use to represent the data.</para>
        </dialogReference>
      </param>
      <param name="projected_data_shapefile" displayname="projected data shapefile" type="Required" direction="Output" expression="&lt;projected_data_shapefile&gt;">
        <commandReference/>
        <dialogReference>
          <para>The output shapefile to contain the projected data shapes.</para>
        </dialogReference>
      </param>
      <param name="label_from_SOM_data" displayname="label from SOM data" type="Optional" direction="Input" expression="{label_from_SOM_data}">
        <commandReference/>
        <dialogReference>
          <para>The unprojected SOM data file that contains the values and labels to use for the projected data.</para>
        </dialogReference>
      </param>
      <param name="Cartesian_quadrant" displayname="Cartesian quadrant" type="Required" direction="Input" expression="&lt;1&gt;">
        <commandReference/>
        <dialogReference>
          <para>The Cartesian quadrant in which to place the shapes.</para>
        </dialogReference>
      </param>
      <param name="spacing_between_center_points" displayname="spacing between center points" type="Required" direction="Input" expression="&lt;spacing_between_center_points&gt;">
        <commandReference/>
        <dialogReference>
          <para>The spacing between the units in the SOM on which the projected data will be displayed.</para>
        </dialogReference>
      </param>
      <param name="placement" displayname="placement" type="Required" direction="Input" expression="&lt;center | random around center&gt;">
        <commandReference/>
        <dialogReference>
          <para>The placement location on each SOM unit to use for the projected data shapes.</para>
        </dialogReference>
      </param>
      <param name="maximum_placement_distance" displayname="maximum placement distance" type="Required" direction="Input" expression="&lt;maximum_placement_distance&gt;">
        <commandReference/>
        <dialogReference>
          <para>The maximum distance from the center of the SOM units to place the projected data shapes.</para>
        </dialogReference>
      </param>
    </parameters>
  </tool>
